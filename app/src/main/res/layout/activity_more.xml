<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/treeCard"
            android:layout_marginBottom="16dp"
            android:background="?attr/colorPrimarySurface"
            android:backgroundTint="#03EDEDED"
            app:cardBackgroundColor="#03EDEDED"
            app:cardCornerRadius="10dp"
            android:paddingBottom="10dp"
            app:cardElevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Baum"
                android:fontFamily="sans-serif-medium"
                android:layout_margin="15dp"
                android:textSize="20dp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/treeRelLay"
                android:layout_marginTop="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal"
                android:stretchColumns="1,2"
                >
            </TableLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:id="@+id/flowerCard"
            android:background="?attr/colorPrimarySurface"
            android:backgroundTint="#03EDEDED"
            app:cardBackgroundColor="#03EDEDED"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BlÃ¼te"
                android:fontFamily="sans-serif-medium"
                android:layout_margin="15dp"
                android:textSize="20dp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/flowRelLay"
                android:layout_marginTop="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal"
                android:stretchColumns="0,1,2"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:id="@+id/knCard"
            android:background="?attr/colorPrimarySurface"
            app:cardCornerRadius="10dp"
            android:backgroundTint="#03EDEDED"
            app:cardBackgroundColor="#03EDEDED"
            app:cardElevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Knospe"
                android:fontFamily="sans-serif-medium"
                android:layout_margin="15dp"
                android:textSize="20dp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/knRelLay"
                android:layout_marginTop="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal"
                android:stretchColumns="0,1,2"/>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:id="@+id/wCard"
            android:background="?attr/colorPrimarySurface"
            android:backgroundTint="#03EDEDED"
            app:cardBackgroundColor="#03EDEDED"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wurzel"
                android:fontFamily="sans-serif-medium"
                android:layout_margin="15dp"
                android:textSize="20dp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/wRelLay"
                android:layout_marginTop="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal"
                android:stretchColumns="1,2"/>


        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>