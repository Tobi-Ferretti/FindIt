<?xml version="1.0" encoding="utf-8"?>
<!-- Put your color for ripple effect -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@android:color/white">
    <solid android:color="#ffffff"/>
    <item android:id="@android:id/mask" android:drawable="@color/white">
        <shape android:shape="oval">
            <!-- Color not displayed,just to tell ripple about the bounds -->
            <solid android:color="@android:color/black" />
        </shape>
    </item>
    <!-- And your drawable -->
    <item android:drawable="@drawable/ic_baseline_add_photo_alternate_24" />
</ripple>